{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "stripInternal": true
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.ngfactory.*"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
